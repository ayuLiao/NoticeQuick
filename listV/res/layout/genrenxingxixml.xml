<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/rl_face"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face1"
            android:layout_centerHorizontal="true"
            /> 
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/one"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_below="@+id/rl_face"
	    android:layout_marginTop="10dp"
	    >
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="昵称:"
	    android:textSize="15sp"
	    android:textColor="#000000"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    />
	    <com.example.listv.view.MyEditText
	        android:id="@+id/id_nichen"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text="hahah"
	        android:textColor="#6c6c6c"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="55dp"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        />
	</RelativeLayout>
	<RelativeLayout 
		android:id="@+id/two"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_marginTop="15dp"
	    android:layout_below="@+id/one"
	    >
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="您的电话:"
	    android:textSize="15sp"
	    android:textColor="#000000"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    />
	    <com.example.listv.view.MyEditText
	        android:id="@+id/id_pnm"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text="hahah"
	        android:textColor="#6c6c6c"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="85dp"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        android:focusable="false"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/three"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	  
	    android:layout_below="@+id/two"
	    android:layout_marginTop="15dp"
	    >
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="密码:"
	    android:textSize="15sp"
	    android:textColor="#000000"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    />
	    <com.example.listv.view.MyEditText
	        android:id="@+id/id_mm"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text="hahah"
	        android:textColor="#6c6c6c"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="55dp"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/four"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	  
	    android:layout_below="@+id/three"
	    android:layout_marginTop="15dp"
	    >
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="个性签名:"
	    android:textSize="15sp"
	    android:textColor="#000000"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    />
	    <com.example.listv.view.MyEditText
	        android:id="@+id/id_gexiqianming"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text="hahah"
	        android:textColor="#6c6c6c"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="80dp"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        />
	</RelativeLayout>
	  
    <RelativeLayout 
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/four"
        android:layout_marginTop="15dp"
        >
         <Button
                android:id="@+id/id_baocun"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_type"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/id_quexiao"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/id_denglu"
                android:background="@drawable/button_type2"
                android:text="取消"
                android:textColor="#88d35400"
                android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
	     
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/five"
        android:layout_marginTop="15dp"
        >
        <ImageView 
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face2"
            android:layout_centerHorizontal="true"
            /> 
    </RelativeLayout>
</RelativeLayout>
