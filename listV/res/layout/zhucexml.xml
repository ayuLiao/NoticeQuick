<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    <RelativeLayout 
        android:id="@+id/one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            />
        <com.example.listv.view.MyEditText  
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="你的昵称"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            />
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/one"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textSize="15sp"
            android:textColor="#000000"
             android:layout_centerVertical="true"
            />
        <com.example.listv.view.MyEditText  
            android:id="@+id/et_phone"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="你的手机号码"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/two"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="15sp"
            android:textColor="#000000"
             android:layout_centerVertical="true"
            />
        <com.example.listv.view.MyEditText  
            android:id="@+id/et_mima"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="填写密码"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/four"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/three"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码:"
            android:textSize="15sp"
            android:textColor="#000000"
             android:layout_centerVertical="true"
            />
        <com.example.listv.view.MyEditText  
            android:id="@+id/et_mima2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="再次填写密码"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="70dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            />
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	  	android:layout_below="@+id/four"
	  	android:layout_marginTop="15dp"
	    >
	    <Button 
	        android:id="@+id/id_bt_zhuce"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:background="@drawable/button_type" 
	        android:text="注册"
	        android:textColor="#000000"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/my_app"
	        android:textSize="8sp"
	        android:layout_below="@+id/id_bt_zhuce"
	        android:layout_marginTop="15dp"
	        />
	</RelativeLayout>
</RelativeLayout>
