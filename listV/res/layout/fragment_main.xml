
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:liao="http://schemas.android.com/apk/res/com.example.listv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2" >

	<RelativeLayout 
	    android:id="@+id/rlSearchFrameDelete"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    >
	    <ImageView 
	        android:id="@+id/imageView_find"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/actionbar_search"
	        />
	    <com.example.listv.view.MyEditText 
	        android:id="@+id/editText"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:singleLine="true"
	        android:inputType="phone"
	        android:maxLength="11"
	        android:layout_marginRight="10dp"
	        android:paddingLeft="40dp"
	        android:textSize="25sp"
	        android:hint="phone number"
	        android:background="@null"
	        android:textColor="#ffffff"
	        android:textCursorDrawable="@drawable/cursor_color"
	        />
	    <ImageView 
	        android:id="@+id/imageView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/delete_selector"
	        android:paddingRight="20dp"
	        android:layout_centerInParent="true"
	        android:visibility="gone"
	        />
	</RelativeLayout>
    <ListView
         android:layout_below="@id/rlSearchFrameDelete"
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fadeScrollbars="true"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        ></ListView>
    <include layout="@layout/caidan"/>
    
    </RelativeLayout>